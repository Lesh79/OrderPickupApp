@model IEnumerable<OrderPickupApp.Models.Order>

@{
ViewBag.Title = "Список заказов";
Layout = "_Layout";
}

<h2>Список заказов</h2>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Номер заказа</th>
        <th>Город отправителя</th>
        <th>Адрес отправителя</th>
        <th>Город получателя</th>
        <th>Адрес получателя</th>
        <th>Вес КГ</th>
        <th>Дата забора</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
    <tr>
        <td>@order.Id</td>
        <td>@order.SenderCity</td>
        <td>@order.SenderAddress</td>
        <td>@order.ReceiverCity</td>
        <td>@order.ReceiverAddress</td>
        <td>@order.CargoWeight</td>
        <td>@order.PickupDate.ToShortDateString()</td>
        <td>
            <a asp-action="Details" asp-route-id="@order.Id">Детали</a>
        </td>
    </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Создать новый заказ</a>
